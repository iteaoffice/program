<phpunit bootstrap="tests/ProgramTest/Bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         verbose="true"
         stopOnFailure="false"
         processIsolation="false"
         backupGlobals="false"
         syntaxCheck="true"
        >
    <testsuite name="Program Test Suite">
        <directory>./tests/ProgramTest</directory>
    </testsuite>

    <php>
        <const name="DEBRANOVA_HOST" value="test"/>
        <const name="DEBRANOVA_APP" value="test"/>
        <const name="DEBRANOVA_APPLICATION" value="test"/>
        <const name="DEBRANOVA_ENV" value="development"/>
    </php>

    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-text" target="php://stdout"/>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
    </logging>
</phpunit>
