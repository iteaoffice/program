{% do headTitle().append(translate("txt-replace-nda-(%s)-for-contact-%s")|
format(nda, nda.contact.displayName)) %}

<h1>{{ translate("txt-replace-nda-(%s)-for-contact-%s")|
    format(nda, nda.contact.displayName)|raw }}</h1>

<p class="lead">{{ translate("txt-replace-nda-for-contact-%s")|
    format(nda.contact.displayName)|raw }}</p>


{{ form().openTag(form)|raw }}

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-contact") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ nda.contact.displayName }}</p></div>
</div>

{% if nda.call %}
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">{{ translate("txt-program-call") }}</label>

        <div class="col-sm-9">
            <p class="form-control-plaintext">{{ nda.call.first }}</p>
        </div>
    </div>
{% endif %}

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-download-current-nda") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ ndaLink(nda,'download','text') }}</p>
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-render-new-nda") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ ndaLink(nda,'render','text',nda.call.first) }}</p>
    </div>
</div>


{{ ztbformelement(form.get('file')) }}
{{ formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
