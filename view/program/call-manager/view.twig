{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-call-%s")|format(call)) %}

<h1>{{ translate("txt-call-%s")|format(call) }}</h1>

<h2><strong>{{ translate("txt-call-information") }}</strong></h2>
<dl class="dl-horizontal">
    <dt>{{ translate("txt-call-id") }}</dt>
    <dd>{{ call.id }}</dd>

    <dt>{{ translate("txt-call") }}</dt>
    <dd>{{ call }}</dd>

    <dt>{{ translate("txt-program") }}</dt>
    <dd>{{ programLink(call.program,'view-admin','name') }}</dd>
</dl>

<h2>{{ translate("txt-countries-active-in-call-%s")|format(call) }}</h2>


<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>{{ translate("txt-country") }}</th>
        <th>{{ translate("txt-date-national-application") }}</th>
        <th>{{ translate("txt-date-expected-funding-decision") }}</th>
    </tr>
    </thead>
    <tbody>
    {% for country in countries %}
        <tr>
            <td>{{ countryLink(country,'view-admin','name') }}</td>
            {% for callCountry in call.callCountry if callCountry.country.id == country.id %}
                <td>{{ callCountry.dateNationalApplication|default('-') }} {{ callCountryLink(callCountry,'edit-admin','icon') }}</td>
                <td>{{ callCountry.dateExpectedFundingDecision|default('-') }}</td>
            {% else %}
                <td>{{ translate("txt-not-provided-yet") }} {{ callCountryLink(null,'new-admin','icon', call, country) }}</td>
                <td>{{ translate("txt-not-provided-yet") }}</td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
