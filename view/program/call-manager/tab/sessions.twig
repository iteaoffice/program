<h2>{{ translate("txt-sessions") }}</h2>
{% if call.session.count() > 0 %}
    <table class="table table-hover table-striped table-sm">
        <thead>
        <tr>
            <th>{{ translate("txt-id") }}</th>
            <th>{{ translate("txt-session") }}</th>
            <th>{{ translate("txt-date") }}</th>
            <th>{{ translate("txt-ideas") }}</th>
        </tr>
        </thead>
        <tbody>
        {% for session in call.session %}
            <tr>
                <td><small class="text-muted">{{ session.id }}</small></td>
                <td>{{ toolSessionLink(session, 'view-admin') }}</td>
                <td>{{ session.date|string_date }}</td>
                <td>{{ session.ideaSession|length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-no-sessions-found"))|raw }}
{% endif %}