{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-nda")) %}

<h1>{{ translate("txt-edit-nda") }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

    {% set ndaForm = form.get('program_entity_nda') %}

    {{ contactformelement(ndaForm.get('contact')) }}
    {{ ztbformelement(ndaForm.get('dateSigned')) }}
    {{ ztbformelement(ndaForm.get('dateApproved')) }}
    {{ ztbformelement(ndaForm.get('programCall')) }}

{% if not nda.object.isEmpty() %}
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">{{ translate("txt-download-current-nda") }}</label>

        <div class="col-sm-9">
            <p class="form-control-plaintext">{{ ndaLink(nda,'download','text') }}</p>
        </div>
    </div>
{% endif %}

{{ ztbformelement(ndaForm.get('file')) }}
{{ formelement(form.get('csrf')) }}
<hr>


<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {{ ztbformelement(form.get('delete')) }}
    </div>
</div>

{{ form().closeTag()|raw }}