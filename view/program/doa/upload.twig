{% do headTitle().append(translate("txt-upload-doa-title")) %}

<h1>{{ translate("txt-upload-doa-for-organisation-%s-for-program-%s")|
    format(organisation, program)|raw }}</h1>

<p class="lead">{{ translate("txt-upload-doa-for-organisation-%s-for-program-%s-explanation")|
    format(affiliation.organisation, program)|raw }}</p>


{{ form().openTag(form)|raw }}

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-program") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ programLink(program,'view') }}</p>
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-organisation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ organisation }}</p>
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-download-doa") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ translate("txt-download-program-doa-link-text") }}</p>
    </div>
</div>

{{ ztbformelement(form.get('file')) }}
{{ formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
