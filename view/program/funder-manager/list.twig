{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-funder-list")) %}

<h1>{{ translate("txt-funder-list") }}</h1>

{% if funder|length > 0 %}
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>{{ translate("txt-contact") }}</th>
            <th>{{ translate("txt-country") }}</th>
            <th>{{ translate("txt-position") }}</th>
            <th>{{ translate("txt-show-on-website") }}</th>
        </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
        {% for funder in funder %}
            <tr>
                <td>{{ funderLink(funder,'view-admin', 'name') }} {{ funderLink(funder,'edit', 'icon') }}</td>
                <td>{{ funder.country }}</td>
                <td>{{ funder.position }}</td>
                <td>{% if funder.getShowOnWebsite %}{{ translate(funder.getShowOnWebsite(true)) }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-no-funders-found"))|raw }}
{% endif %}

{{ funderLink(null,'new', 'button') }}
