{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-session-list")) %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set filter = form.get('filter') %}


<div class="row">
    <div class="col-md-10">
        <h1>{{ translate("txt-session-list") }} {{ callSessionLink(null, 'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-session-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <div class="input-group-append input-group-btn">
                        {{ formelement(form.get('submit')) }}
                    </div>
                </div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-sm">
                <thead>
                <tr>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'id', 'text': translate("txt-id")} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'session', 'text': translate("txt-session")} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'tool', 'text': translate("txt-tool")} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'date-from', 'text': translate("txt-date-from")} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'date-end', 'text': translate("txt-date-to")} %}</th>
                    <td>{{ translate("txt-open-for-registration") }}</td>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <td colspan=7"></td>
                </tr>
                </tfoot>
                <tbody>
                {% for session in paginator.getCurrentItems() %}
                    <tr>
                        <td><small class="text-muted">{{ session.id }}</small></td>
                        <td>{{ callSessionLink(session,'view-admin') }} {{ callSessionLink(session,'edit', 'icon') }}</td>
                        <td>{{ ideaToolLink(session.tool,'view-admin','name') }}</td>
                        <td>{{ session.dateFrom|date('d-m-Y H:i') }}</td>
                        <td>{{ session.dateEnd|date('d-m-Y H:i') }}</td>
                        <td>{% if session.isOpenForRegistration %}<i class="fas fa-check text-success"></i> {{ session.quota}} {% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'application/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-sessions-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-2">
        <div class="well well-sm">
            <fieldset>
                {{ ztbformelement(filter.get('call'), true) }}

                {{ ztbformelement(form.get('submit')) }}
                {{ ztbformelement(form.get('clear')) }}
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}

