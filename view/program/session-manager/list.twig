{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-session-list")) %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set filter = form.get('filter') %}



<div class="row">
    <div class="col-md-10">
        <h1>{{ translate("txt-session-list") }} {{ callSessionLink(null, 'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-session-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <div class="input-group-append input-group-btn">
                        {{ formelement(form.get('submit')) }}
                    </div>
                </div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-sm">
                <thead>
                <tr>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'id', 'text': translate('txt-id')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'session', 'text': translate('txt-session')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'call', 'text': translate('txt-call')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/session/list', 'criteria': 'date', 'text': translate('txt-date')} %}</th>
                </tr>
                </thead>
                <tbody>
                {% for session in paginator.getCurrentItems() %}
                    <tr>
                        <td>{{ session.id }} {{ callSessionLink(session,'edit', 'icon') }}</td>
                        <td>{{ callSessionLink(session,'view-admin') }}</td>
                        <td>{{ callLink(session.call,'view-admin','name') }}</td>
                        <td>{{ session.date|string_date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'application/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-sessions-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-2">
        <div class="well well-sm">
            <fieldset>
                {{ ztbformelement(filter.get('call'), true) }}

                                   {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}

