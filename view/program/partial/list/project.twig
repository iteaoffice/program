<h3>{{ translate("txt-call-%s-project-list")|format(call.call) }}</h3>

<div class="row">
    {% for project in projects %}
    {% set projectService = projectServiceProxy(project) %}
    <div class="col-md-2">
        <div class="thumbnail">
            {% set projectImage = '<div class="information-box-image">' ~ projectLogo(projectService, 'img-responsive') ~ '</div>' %}
            {{ projectLink(projectService,'view','alternativeShow',null,projectImage) }}
            <p class="information-box-title text-center">
                {{ projectLink(projectService,'view','name-without-number') }}
            </p>
        </div>
    </div>
    {% if loop.index is divisibleby(6) %}
</div>
<div class="row">
    {% endif %}
    {% endfor %}
</div>