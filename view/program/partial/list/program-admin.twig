{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-program-list")) %}

<h1>{{ translate("txt-program-list") }} {{ programLink(null,'new', 'button') }}</h1>

<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>{{ translate("txt-program-name") }}</th>
        <th>{{ translate("txt-number") }}</th>
        <th>{{ translate("txt-amount-of-calls") }}</th>
        <th>{{ translate("txt-eurkeka-export") }}</th>
    </tr>
    </thead>
    <tbody>
    {% for program in entities %}
        <tr>
            <td>{{ program }} {{ programLink(program,'edit','icon') }}</td>
            <td>{{ program.number }}</td>
            <td>{{ program.call.count }}</td>
            <td><a href="{{ url('zfcadmin/project/export/program',{'id': program.id}) }}"><i class="fa fa-exchange"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
