{% do headLink().appendStylesheet('//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/ui-lightness/jquery-ui.min.css') %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set sessionFieldset = form.get('program_entity_call_session') %}

{{ ztbformelement(sessionFieldset.get('session')) }}
{{ ztbformelement(sessionFieldset.get('date')) }}
{{ ztbformelement(sessionFieldset.get('call')) }}
{{ ztbformelement(sessionFieldset.get('tool')) }}

{% if edit %}
    <h2>{{ translate("txt-ideas") }}</h2>
    <div class="row">
        <div class="col-md-6">
            <p><select id="sel-idea" class="form-control">
                {% for idea in ideas %}
                    <option data-link="{{ ideaLink(idea, 'view-admin')|escape }}" value="{{ idea.id }}">{{ idea }}</option>
                {% endfor %}
                </select></p>
            <p>
                <button id="btn-add" title="{{ translate("txt-add") }}" type="button" class="btn btn-primary">
                    <i class="fas fa-plus"></i> {{ translate("txt-add-idea") }}
                </button>
            </p>
        </div>
        <div class="col-md-6">
            <table class="table table-hover table-striped table-sm">
                <thead>
                <tr>
                    <th class="col-md-2 col-sm-3">{{ translate("txt-schedule") }}</th>
                    <th class="col-md-10 col-sm-9">{{ translate("txt-idea") }}</th>
                    <th></th>
                </thead>
                <tfoot>
                </tfoot>
                <tbody id="session-table">
                {% for key, fieldset in sessionFieldset.get('ideaSession').getFieldsets() %}
                    <tr id="idea-{{ sessionFieldset.get('ideaSession').object[key].idea.id }}">
                        <td><input type="text" name="{{ fieldset.get('schedule').getAttribute('name') }}"
                                   class="form-control" value="{{ fieldset.get('schedule').getValue() }}">
                        </td>
                        <td><input type="hidden" name="{{ fieldset.get('idea').getAttribute('name') }}"
                                   value="{{ sessionFieldset.get('ideaSession').object[key].idea.id }}">
                            {{ ideaLink(sessionFieldset.get('ideaSession').object[key].idea, 'view-admin') }}
                        </td>
                        <td>
                            <button title="{{ translate("txt-remove") }}" type="button"
                                    class="btn btn-danger btn-sm text-right"><i class="far fa-trash-alt"></i></button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <hr>
    {{ formelement(form.get('submit')) }}
    {{ formelement(form.get('cancel')) }}
    {{ form().closeTag()|raw }}

    <script type="text/javascript">
        $(function () {
            var $table = $('#session-table'), $sel = $('#sel-idea'), $template = $('#template');
            var count = $table.find('tr').length;

            $table.on('click', 'button', function () {
                $(this).closest('tr').fadeOut(300, function () {
                    $(this).remove();
                });
            });
            $('#btn-add').click(function () {
                var opt = $sel.find('option:selected');
                if ($('#idea-' + opt.val()).length === 0) {
                    var html = $template.find('tbody').html()
                        .replace(/__id__/g, opt.val())
                        .replace(/__index__/g, count)
                        .replace('__idea__', opt.data('link'));
                    $(html).hide().appendTo($table).fadeIn(300);
                    count++;
                } else {
                    alert('{{ translate("txt-idea-has-already-been-added") }}');
                }
            });
        });


        $('input[type=datetime]').datetimepicker({
            addSliderAccess: true,
            sliderAccessArgs: {touchonly: false},
            timeFormat: 'HH:mm:ss',
            dateFormat: 'yy-mm-dd'
        });
    </script>

    <div id="template" class="d-none">
        <table>
            <tbody>
            <tr id="idea-__id__">
                <td><input type="text" name="program_entity_call_session[ideaSession][__index__][schedule]"
                           class="form-control" value=""></td>
                <td><input type="hidden" name="program_entity_call_session[ideaSession][__index__][idea]"
                           value="__id__">
                    __idea__
                </td>
                <td>
                    <button title="{{ translate("txt-remove") }}" type="button"
                            class="btn btn-danger btn-sm text-right"><i class="far fa-trash-alt"></i></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% else %}
    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            {{ formelement(form.get('submit')) }}
            {{ formelement(form.get('cancel')) }}
        </div>
    </div>
    {{ form().closeTag()|raw }}
{% endif %}