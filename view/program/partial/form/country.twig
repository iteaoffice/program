{% do form.prepare() %}
{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-call") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ callLink(callCountry.call,'view-admin','name') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-country") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ countryLink(callCountry.country,'view-admin','name') }}</p>
    </div>
</div>

{% set callCountryForm = form.get('program_entity_call_country') %}

{{ ztbformelement(callCountryForm.get('dateNationalApplication')) }}
{{ ztbformelement(callCountryForm.get('dateExpectedFundingDecision')) }}
{{ formelement(form.get('csrf')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}