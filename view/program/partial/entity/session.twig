{% do headTitle().append(translate("txt-session")) %}
{% do headTitle().append(session.session) %}

<h1>{{ session.session }} {# callSessionLink(session,'download','icon') #}</h1>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-name") }}</dt>
    <dd>{{ session.session }}</dd>
    <dt>{{ translate("txt-date") }}</dt>
    <dd>{{ session.date|string_date }}</dd>
    <dt>{{ translate("txt-program-call") }}</dt>
    <dd>{{ session.call }}</dd>
</dl>

<h2>{{ translate("txt-presentations") }}</h2>
<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>{{ translate("txt-time") }}</th>
        <th>{{ translate("txt-number") }}</th>
        <th>{{ translate("txt-idea") }}</th>
        <th>{{ translate("txt-title") }}</th>
        <th>{{ translate("txt-presenter") }}</th>
    </tr>
    </thead>
    <tbody>
    {% for ideaSession in session.ideaSession %}
        {% set ideaService = ideaServiceProxy(ideaSession.idea) %}
        <tr>
            <td>{{ ideaSession.schedule }}</td>
            <td>{{ ideaService.idea.number }}</td>
            <td>{{ ideaLink(ideaService,'view','name') }}
                {% if session.id in [17,20] %}
                    {% for document in ideaService.idea.document if 'pitch' in document.document and document.contentType.id == 1 %}
                        {{ ideaDocumentLink(document,'download','icon') }}
                    {% endfor %}
                {% endif %}
                {% if session.id in [21] %}
                    {% for document in ideaService.idea.document if 'day1' in document.document and document.contentType.id == 1 %}
                        {{ ideaDocumentLink(document,'download','icon') }}
                    {% endfor %}
                {% endif %}
                {% if session.id in [24] %}
                    {% for document in ideaService.idea.document if 'day2' in document.document and document.contentType.id == 1 %}
                        {{ ideaDocumentLink(document,'download','icon') }}
                    {% endfor %}
                {% endif %}
            </td>
            <td>{{ ideaService.idea.title }}</td>
            <td>{{ ideaService.idea.contact.displayName() }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
